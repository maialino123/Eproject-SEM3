
@{
    Layout = null;
    ViewBag.Title = "forgotPassword";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="Enter your description here" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.6.0/sketchy/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container-fluid {
            width: 100%;
            height: 1100px;
            background-color: #F5F5F5;
        }

        .content {
            border-radius: 10px;
            box-shadow: 2px 2px #9575cd, -0.2em 2px rgba(255, 255, 255, 0.1);
            width: 400px;
            height: 300px;
            padding: 20px;
            justify-content: center;
            background-color: #FFFFFF;
        }

        .headerContent {
            border-bottom: 1px solid #424242;
            padding-bottom: 8px;
        }

        .textContent {
            padding-top: 20px
        }

        .formInput input {
            width: 100%;
            padding: 10px;
            border-radius: 10px;
            outline: none;
            margin-bottom: 20px;
            border: 1px solid #424242;
        }

        .formInput {
            border-bottom: 1px solid #424242;
        }

        .footerContent {
            margin-top: 20px;
            float: right;
        }

        .btnCancel {
            margin-right: 10px;
            width: 80px;
            border-radius: 10px;
            color: #ffff;
        }

        .btnFind {
            width: 80px;
            border-radius: 10px;
            color: #ffff;
        }
    </style>
</head>
<body>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">OTP</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body bodyModalDelete">
                    <div class="row">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="inputRePassword" class="labelRePasswordDelete" style="width: 100%">Enter your password : </label>
                            </div>
                            <div class="col-md-6">
                                <input type="password" name="reEnterPassword" id="inputOTPresult" /> <span class="txtTime" id="txtTime" style="position: absolute; top: 0; right: 10px; color: #311b92; border-left: 1px solid #616161 "></span>
                                <p id="txtOTP"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="continue">Continue</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #A1887F; height: 70px;">
                    <ul class="nav ">
                        <li class="nav-item">
                            <a class="nav-link active homeRedirect" href="#Home" style="font-size: 25px;">Flower</a>
                        </li>
                        <div class="row" style="position: absolute; right: 100px">
                            <li class="nav-item" style="margin-right: 10px;">
                                <input type="text" class="form-control" placeholder="Email" id="emailLoginInput">
                            </li>
                            <li class="nav-item" style="margin-right: 10px;">
                                <input type="password" class="form-control" placeholder="Password" id="passwordLoginInput">
                            </li>
                            <li class="nav-item" style="margin-right: 10px;">
                                <button class="btn" id="btnLogin" style="background-color: blue; width: 100px;">Login</button>
                            </li>
                            <li class="nav-item" style="margin-right: 10px; margin-top: 5px; color: blue !important; font-size: 18px;">
                                <a href="#forgotPassword" id="redirectFindAccount">You forgot your password?</a>
                            </li>
                        </div>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-5"></div>
            <div class="col-md-4" style="width: 100%; height: 1000px;">
                <div class="content">
                    <div class="headerContent">
                        <h2>Find your account</h2>
                    </div>
                    <div class="textContent">
                        <p>Please enter your email or phone number to search your account</p>
                    </div>
                    <div class="formInput">
                        <input type="text" placeholder="Phone number or Email" id="forgotPhoneOrEmailInput">
                    </div>
                    <div class="footerContent">
                        <button class="btn btnCancel" style="background-color: gray;">Cancel</button>
                        <button class="btn btnFind" style="background-color: blue;">Find</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    @*add validate form*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/assets/admin/bootstrap4/js/bootstrap.js"></script>
    <script type="text/javascript" src="~/assets/admin/js/InnerFormValidation.js"></script>
    <script src="~/assets/admin/MDBBoostrap/fontAll.min.js"></script>
    <link href="~/assets/admin/admin-sbStyle/build/toastr.css" rel="stylesheet" type="text/css" />
    <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
    <script src="~/assets/admin/admin-sbStyle/build/toastr.js"></script>
    <script src="~/assets/web/forgotPassword/js/forgotPassword.js"></script>
</body>
</html>

